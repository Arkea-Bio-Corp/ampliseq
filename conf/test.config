/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/ampliseq -profile test,<docker/singularity>
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  
  // Limit resources so that this can run on GitHub Actions
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h

  // Input data
  FW_primer = "GTGYCAGCMGCCGCGGTAA"
  RV_primer = "GGACTACNVGGGTWTCTAAT"
  outdir = "./results_test"
  input = "https://github.com/d4straub/test-datasets/raw/ampliseq/samplesheets/Samplesheet.tsv"
  metadata = "https://github.com/d4straub/test-datasets/raw/ampliseq/samplesheets/Metadata.tsv"
  dada_ref_taxonomy = "https://zenodo.org/record/4310151/files/rdp_train_set_18.fa.gz"
  dada_ref_species = "https://zenodo.org/record/4310151/files/rdp_species_assignment_18.fa.gz"
  fasta_to_classifier = "https://data.qiime2.org/2021.2/tutorials/training-feature-classifiers/85_otus.fasta"
  tax_to_classifier = "https://data.qiime2.org/2021.2/tutorials/training-feature-classifiers/85_otu_taxonomy.txt"
  //classifier = "https://docs.qiime2.org/2021.2/data/tutorials/feature-classifier/classifier.qza"
}
